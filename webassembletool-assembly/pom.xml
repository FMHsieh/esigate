<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sourceforge.webassembletool</groupId>
	<artifactId>webassembletool-assembly</artifactId>
	<packaging>pom</packaging>
	<name>webassembletool-assembly</name>
	<parent>
		<groupId>net.sourceforge.webassembletool</groupId>
		<artifactId>webassembletool-pom</artifactId>
		<version>2.2</version>
	</parent>
	<build>
		<plugins>
 			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<id>copy-javadoc</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<classifier>javadoc</classifier>
							<outputDirectory>${project.build.directory}/javadoc</outputDirectory>
							<excludeTransitive>true</excludeTransitive>
							<includeTypes>jar</includeTypes>
						</configuration>
					</execution>
					<execution>
						<id>copy-sources</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<classifier>sources</classifier>
							<outputDirectory>${project.build.directory}/src</outputDirectory>
							<excludeTransitive>true</excludeTransitive>
							<copyPom>true</copyPom>
							<includeTypes>jar</includeTypes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-4</version>
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/assembly.xml</descriptor>
					</descriptors>
					<finalName>webassembletool-${version}</finalName>
					<outputDirectory>target/assembly/out</outputDirectory>
					<workDirectory>target/assembly/work</workDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-core</artifactId>
			<version>2.2</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-taglib</artifactId>
			<version>2.2</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-taglib-helper</artifactId>
			<version>2.2</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-jsf</artifactId>
			<version>2.2</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-master</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-provider</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-aggregator</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-aggregated1</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-aggregated2</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-cas</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-casified-aggregator</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-casified-aggregated1</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-casified-aggregated2</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-facelet</artifactId>
			<version>2.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
</project> 