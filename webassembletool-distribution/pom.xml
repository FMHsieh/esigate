<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>net.sourceforge.webassembletool</groupId>
	<artifactId>webassembletool-distribution</artifactId>
	<version>2.15-SNAPSHOT</version>
	<name>webassembletool-distribution</name>
	<packaging>pom</packaging>
	<parent>
		<artifactId>webassembletool</artifactId>
		<groupId>net.sourceforge.webassembletool</groupId>
		<version>2.15-SNAPSHOT</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-core</artifactId>
			<version>2.15-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-taglib</artifactId>
			<version>2.15-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-taglib-helper</artifactId>
			<version>2.15-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-jsf</artifactId>
			<version>2.15-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-wicket</artifactId>
			<version>2.15-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-cas</artifactId>
			<version>2.15-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-provider</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-master</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-aggregated1</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-aggregated2</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-aggregator</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-cas</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-casified-aggregated1</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-casified-aggregated2</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-casified-aggregator</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.webassembletool</groupId>
			<artifactId>webassembletool-app-facelet</artifactId>
			<version>2.15-SNAPSHOT</version>
			<type>war</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-4</version>				
				<configuration>
					<attach>false</attach>
					<descriptors>
						<descriptor>src/main/assembly/assembly.xml</descriptor>
					</descriptors>
					<outputDirectory>${project.build.directory}/distribution/${currentVersion}</outputDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<!--  When releasing a project, this profile will upload assembly in sourceforge -->
		<profile>
			<id>release</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>2.2-beta-4</version>
						<executions>
							<execution>
								<id>make-assembly</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.4</version>
						<configuration>
							<tasks>
								<taskdef resource="net/sf/antcontrib/antcontrib.properties" />
								<echo>deploiement sur le serveur</echo>
								<input
									message="enter your sourceforge account? format is 'login,webassembletool:password' (enter to skip)"
									addproperty="sflogin" />

								<scp
									todir="${sflogin}@frs.sourceforge.net:/home/frs/project/w/we/webassembletool/webassembletool/"
									failonerror="false">
									<fileset dir="${project.build.directory}/distribution/" >
										<include name="${currentVersion}/*"/>
									</fileset>
								</scp>

							</tasks>
						</configuration>
						<executions>
							<execution>
								<phase>deploy</phase>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>ant-contrib</groupId>
								<artifactId>ant-contrib</artifactId>
								<version>1.0b3</version>
								<exclusions>
									<exclusion>
										<groupId>ant</groupId>
										<artifactId>ant</artifactId>
									</exclusion>
								</exclusions>
							</dependency>
							<dependency>
								<groupId>ant</groupId>
								<artifactId>ant-jsch</artifactId>
								<version>1.6.5</version>
							</dependency>
							<dependency>
								<groupId>com.jcraft</groupId>
								<artifactId>jsch</artifactId>
								<version>0.1.25</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>

		</profile>
	</profiles>
</project>